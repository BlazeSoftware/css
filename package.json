{
  "name": "@blaze/css",
  "version": "9.2.1",
  "description": "Open Source UI Toolkit - CSS",
  "author": "Gregory Pratt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlazeSoftware/css.git"
  },
  "bugs": {
    "url": "https://github.com/BlazeSoftware/css/issues"
  },
  "homepage": "https://www.blazeui.com",
  "keywords": [
    "html",
    "sass",
    "scss",
    "css",
    "bem",
    "itcss",
    "bemit",
    "ui",
    "ux",
    "framework",
    "components",
    "webcomponents",
    "stencil",
    "stenciljs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/scss",
    "dist/blaze/blaze.css"
  ],
  "main": "dist/blaze/blaze.css",
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stylelint \"src/scss/**/*.scss\"",
    "stylelint": "stylelint \"src/**/*.scss\" --fix",
    "prettier": "prettier --write './**/*'",
    "prepare": "husky install",
    "preversion": "npm run prettier && npm run stylelint && npm test",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "git push --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run stylelint && git add . && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@stencil/core": "2.6.0",
    "@stencil/postcss": "2.0.0",
    "@stencil/router": "1.0.1",
    "@stencil/sass": "1.4.1",
    "@types/cssnano": "4.0.1",
    "conventional-changelog-cli": "2.1.1",
    "cssnano": "5.0.6",
    "husky": "7.0.1",
    "postcss": "8.3.5",
    "prettier": "2.3.2",
    "stylelint": "13.13.1",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "22.0.0",
    "stylelint-scss": "3.19.0"
  }
}
